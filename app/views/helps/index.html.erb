<p id="notice"><%= notice %></p>

<h1>Listing Helps</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Payment status</th>
      <th>Question status</th>
      <th>Email</th>
      <th>Invoice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @helps.each do |help| %>
      <tr>
        <td><%= help.code %></td>
        <td><%= help.description %></td>
        <td><%= help.first_name %></td>
        <td><%= help.last_name %></td>
        <td><%= help.payment_status %></td>
        <td><%= help.question_status %></td>
        <td><%= help.email %></td>
        <td><%= help.invoice %></td>
        <td><%= link_to 'Show', help %></td>
        <td><%= link_to 'Edit', edit_help_path(help) %></td>
        <td><%= link_to 'Destroy', help, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

